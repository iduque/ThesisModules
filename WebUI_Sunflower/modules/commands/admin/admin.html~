	<script type="text/javascript">		
 
  		function sendCommand(room, tray){
   			
   			var ui = new uiHelper();
   			var location = ui.getActiveExperimentLocation();

   			if(location['location'] == "IPA Kitchen"){
   				if(room == "Kitchen") ui.sendCommand('IPA Kitchen Kitchen', tray, 'Going to the Kitchen');
   				else if(room == "Living Room") ui.sendCommand('IPA Kitchen Sofa Area', tray, 'Going to the Living Room');

   			}else if (location['location'] == 'UH Robot House'){
   				if(room == "Hall Entrance") ui.sendCommand('Hall Entrance', tray, 'User, The doorbell has rung. Lets go to the Hall', location['scenario'], 'HallDoorbell');
   				else if(room == "Kitchen") ui.sendCommand('Kitchen Entrance', tray, 'Going to the kitchen', location['scenario'], 'KitchenDrink');
   				else if(room == "Living Room") ui.sendCommand('Living Room Sofa Area', tray, 'Going to the living room',location['scenario'], 'LivingDrink');
   				else if(room == "Starting Position") ui.sendCommand('Starting Position', tray, 'Coming back to my home position',location['scenario'], 'None');
   			}
 			
 			javascript:window.location.href = "/home";
  		}
  		
	</script>
