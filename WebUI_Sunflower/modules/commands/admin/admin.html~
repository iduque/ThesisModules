                <td align="center">
                    <input type="button" value="Doorbell&#10;Scenario" class="myButtonRoom" onclick="sendCommand('Hall Entrance', 'lowered')">
                </td>
                <td align="center">
                    <input type="button" value="Living Room&#10;Scenario" class="myButtonRoom" onclick="sendCommand('Living Room', 'lowered')">
